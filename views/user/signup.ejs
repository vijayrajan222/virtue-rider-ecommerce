<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/tailwindcss/output.css" />
    <title>Sign Up | VIRTUE</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <style>
      body {
        background-image: url('/images/Signup.jpg');
        background-size: cover;
        background-position: center;
        min-height: 100vh;
        position: relative;
      }
      
      body::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.5) 100%);
      }

      .glass-card {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(8px);
        border: 1px solid rgba(255, 255, 255, 0.3);
      }

      .input-style {
        background: rgba(255, 255, 255, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
      }

      .input-style:focus {
        background: rgba(255, 255, 255, 0.2);
        border-color: rgba(255, 255, 255, 0.5);
      }

      .input-style::placeholder {
        color: rgba(255, 255, 255, 0.6);
      }
    </style>
  </head>

  <body class="flex items-center justify-center min-h-screen p-4">
    <div class="w-full max-w-[400px] relative z-10">
      <!-- Logo -->
      <div class="text-center mb-8">
        <img src="/images/whitelogo.png" alt="VIRTUE" class="h-14 mx-auto">
      </div>

      <!-- Signup Form -->
      <div class="glass-card rounded-2xl p-8">
        <h1 class="text-2xl font-bold text-white text-center mb-6">Create Account</h1>

        <form id="signup-form" class="space-y-4">
          <!-- First Name -->
          <div class="relative">
            <i class="fas fa-user absolute left-3 top-1/2 -translate-y-1/2 text-white/70"></i>
            <input 
              type="text" 
              name="firstname"
              placeholder="First name"
              class="input-style w-full pl-10 pr-4 py-3 rounded-xl outline-none"
              required
            >
          </div>

          <!-- Last Name -->
          <div class="relative">
            <i class="fas fa-user absolute left-3 top-1/2 -translate-y-1/2 text-white/70"></i>
            <input 
              type="text" 
              name="lastname"
              placeholder="Last name"
              class="input-style w-full pl-10 pr-4 py-3 rounded-xl outline-none"
              required
            >
          </div>

          <!-- Email -->
          <div class="relative">
            <i class="fas fa-envelope absolute left-3 top-1/2 -translate-y-1/2 text-white/70"></i>
            <input 
              type="email" 
              name="email"
              placeholder="Email address"
              class="input-style w-full pl-10 pr-4 py-3 rounded-xl outline-none"
              required
            >
          </div>

          <!-- Password -->
          <div class="relative">
            <i class="fas fa-lock absolute left-3 top-1/2 -translate-y-1/2 text-white/70"></i>
            <input 
              type="password" 
              name="password"
              placeholder="Password"
              class="input-style w-full pl-10 pr-4 py-3 rounded-xl outline-none"
              required
            >
          </div>

          <!-- Confirm Password -->
          <div class="relative">
            <i class="fas fa-lock absolute left-3 top-1/2 -translate-y-1/2 text-white/70"></i>
            <input 
              type="password" 
              name="confirmPassword"
              placeholder="Confirm password"
              class="input-style w-full pl-10 pr-4 py-3 rounded-xl outline-none"
              required
            >
          </div>

          <!-- Error Message -->
          <div id="generalError" class="hidden text-red-400 text-sm text-center"></div>

          <!-- Sign Up Button -->
          <button 
            type="submit"
            class="w-full bg-white text-black font-semibold py-3 rounded-xl hover:bg-opacity-90 transition-all"
          >
            Create Account
          </button>

          <!-- Google Signup -->
          <a href="/auth/google?trigger=signup" 
             class="w-full flex items-center justify-center gap-2 py-3 mt-3 rounded-xl border border-white/30 text-white hover:bg-white/10 transition-all">
            <i class="fab fa-google"></i>
            <span>Continue with Google</span>
          </a>

          <!-- Login Link -->
          <p class="text-center text-white/70 mt-6">
            Already have an account? 
            <a href="/login" class="text-white hover:underline">Sign in</a>
          </p>
        </form>
      </div>
    </div>

    <!-- Loading Spinner -->
    <div id="loading-spinner" class="hidden fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center">
      <div class="bg-white/10 backdrop-blur p-4 rounded-lg flex items-center gap-3">
        <div class="w-5 h-5 border-2 border-white/30 border-t-white rounded-full animate-spin"></div>
        <span class="text-white">Creating account...</span>
      </div>
    </div>

    <!-- OTP Modal -->
    <div id="otpModal" class="hidden fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50">
      <div class="glass-card p-8 rounded-2xl max-w-md w-full mx-4">
        <h2 class="text-2xl font-bold text-white text-center mb-4">Verify Email</h2>
        <p class="text-white/70 text-center mb-6">Please enter the 6-digit code sent to your email</p>
        
        <div class="flex justify-center gap-2 mb-6">
          <% for(let i = 0; i < 6; i++) { %>
            <input type="text" maxlength="1" class="otp-input w-12 h-12 text-center rounded-lg input-style text-xl font-bold">
          <% } %>
        </div>
        
        <button id="verifyOtp" class="w-full bg-white text-black font-semibold py-3 rounded-xl hover:bg-opacity-90 transition-all mb-4">
          Verify OTP
        </button>
        
        <div class="text-center">
          <button id="resendOtp" class="text-white/70 hover:text-white">Resend OTP</button>
          <div id="resendTimer" class="text-white/50 text-sm mt-2 hidden"></div>
        </div>
      </div>
    </div>

    <script src="/javascript/user/signup.js"></script>
  </body>
</html>
