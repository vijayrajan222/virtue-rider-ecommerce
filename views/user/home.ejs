<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Virtue Rider - Premium Helmets</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white">
    <%- include('../partials/header') %>

    <!-- Hero Banner -->
    <section class="relative h-[500px] mb-8">
        <div class="absolute inset-0">
            <img src="https://images.unsplash.com/photo-1558981806-ec527fa84c39?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" 
                 alt="Motorcycle Gear" 
                 class="w-full h-full object-cover">
            <div class="absolute inset-0 bg-black bg-opacity-40"></div>
        </div>
        <div class="relative h-full flex items-center">
            <div class="container mx-auto px-4">
                <h1 class="text-4xl md:text-5xl text-white font-bold mb-4">SMOKING HOT<br>DEALS ON GEAR</h1>
                <button class="bg-white text-black px-8 py-3 rounded hover:bg-gray-100">Shop Now</button>
            </div>
        </div>
    </section>

    <!-- Product Categories -->
    <section class="container mx-auto px-4 mb-16">
        <div class="grid grid-cols-2 gap-4">
            <div class="relative h-[300px] group cursor-pointer">
                <img src="https://images.unsplash.com/photo-1591637333184-19aa84b3e01f?ixlib=rb-1.2.1&auto=format&fit=crop&w=668&q=80" 
                     alt="Jacket" 
                     class="w-full h-full object-cover">
                <div class="absolute inset-0 bg-black bg-opacity-40 group-hover:bg-opacity-30 transition-all">
                    <div class="absolute bottom-6 left-6">
                        <h3 class="text-white text-2xl font-bold mb-2">JACKET</h3>
                        <button class="text-white underline">View More</button>
                    </div>
                </div>
            </div>
            <div class="relative h-[300px] group cursor-pointer">
                <img src="https://images.unsplash.com/photo-1601924638867-3a6de6b7a500?ixlib=rb-1.2.1&auto=format&fit=crop&w=668&q=80" 
                     alt="Head Gear" 
                     class="w-full h-full object-cover">
                <div class="absolute inset-0 bg-black bg-opacity-40 group-hover:bg-opacity-30 transition-all">
                    <div class="absolute bottom-6 left-6">
                        <h3 class="text-white text-2xl font-bold mb-2">HEAD GEAR</h3>
                        <button class="text-white underline">View More</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Top Picks -->
    <section class="container mx-auto px-4 mb-16">
        <h2 class="text-2xl font-bold mb-8 text-center">Top Picks For You</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
            <!-- Product 1 -->
            <div class="group">
                <div class="mb-4">
                    <img src="https://m.media-amazon.com/images/I/61qDVa0ZnDL._SX679_.jpg" alt="Helmet" class="w-full aspect-square object-cover">
                </div>
                <h3 class="text-sm text-gray-600 mb-2">AGV K1 HELMET</h3>
                <p class="font-semibold">Rs. 78,000.00</p>
            </div>
            <!-- Product 2 -->
            <div class="group">
                <div class="mb-4">
                    <img src="https://m.media-amazon.com/images/I/71h5+MbEK7L._SX679_.jpg" alt="Helmet" class="w-full aspect-square object-cover">
                </div>
                <h3 class="text-sm text-gray-600 mb-2">MT THUNDER HELMET</h3>
                <p class="font-semibold">Rs. 7,500.00</p>
            </div>
            <!-- Product 3 -->
            <div class="group">
                <div class="mb-4">
                    <img src="https://m.media-amazon.com/images/I/61KHxn53iML._SX679_.jpg" alt="Helmet" class="w-full aspect-square object-cover">
                </div>
                <h3 class="text-sm text-gray-600 mb-2">LS2 RAPID HELMET</h3>
                <p class="font-semibold">Rs. 13,000.00</p>
            </div>
            <!-- Product 4 -->
            <div class="group">
                <div class="mb-4">
                    <img src="https://m.media-amazon.com/images/I/51YjwxPXzFL._SX679_.jpg" alt="Helmet" class="w-full aspect-square object-cover">
                </div>
                <h3 class="text-sm text-gray-600 mb-2">AXOR APEX HELMET</h3>
                <p class="font-semibold">Rs. 76,000.00</p>
            </div>
        </div>
        <div class="text-center mt-8">
            <button class="border border-black px-8 py-2 hover:bg-black hover:text-white transition-colors">View More</button>
        </div>
    </section>

    <!-- Full Riding Kit Banner -->
    <section class="relative h-[400px] mb-16">
        <div class="absolute inset-0">
            <img src="https://images.unsplash.com/photo-1558981359-219d6364c9c8?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" 
                 alt="Full Riding Kit" 
                 class="w-full h-full object-cover">
            <div class="absolute inset-0 bg-black bg-opacity-40"></div>
        </div>
        <div class="relative h-full flex items-center">
            <div class="container mx-auto px-4">
                <h2 class="text-4xl text-white font-bold mb-4">FULL RIDING KIT</h2>
                <button class="bg-white text-black px-8 py-3 rounded hover:bg-gray-100">Shop Now</button>
            </div>
        </div>
    </section>

    <!-- Categories -->
    <section class="container mx-auto px-4 mb-16">
        <h2 class="text-2xl font-bold mb-8 text-center">CATEGORIES</h2>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
            <div class="group cursor-pointer">
                <img src="https://m.media-amazon.com/images/I/61qDVa0ZnDL._SX679_.jpg" alt="Off Road" class="w-full aspect-square object-cover mb-4">
                <h3 class="text-center font-semibold">OFF ROAD</h3>
            </div>
            <div class="group cursor-pointer">
                <img src="https://m.media-amazon.com/images/I/71h5+MbEK7L._SX679_.jpg" alt="Open Face" class="w-full aspect-square object-cover mb-4">
                <h3 class="text-center font-semibold">OPEN FACE</h3>
            </div>
            <div class="group cursor-pointer">
                <img src="https://m.media-amazon.com/images/I/61KHxn53iML._SX679_.jpg" alt="Sport" class="w-full aspect-square object-cover mb-4">
                <h3 class="text-center font-semibold">SPORT</h3>
            </div>
        </div>
    </section>

    <%- include('../partials/footer') %>
</body>
</html>
