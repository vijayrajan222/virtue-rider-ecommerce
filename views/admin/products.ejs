            <!-- Products Grid -->
            <div class="p-8">
                <div class="bg-gray-800 rounded-lg shadow-lg">
                    <div class="p-6">
                        <div class="flex justify-between items-center mb-6">
                            <h2 class="text-2xl font-semibold text-gray-200">Products</h2>
                            <button onclick="openAddModal()"
