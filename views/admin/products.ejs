                        </div>

                        <div class="overflow-x-auto">
                            <table class="w-full text-left">
                                <thead class="bg-gray-700 text-gray-200">
                                    <tr>
                                        <th class="p-4">IMAGE</th>
                                        <th class="p-4">PRODUCT</th>
                                        <th class="p-4">BRAND</th>
                                        <th class="p-4">CATEGORY</th>
                                        <th class="p-4">PRICE</th>
                                        <th class="p-4">STOCK</th>
                                        <th class="p-4">STATUS</th>
                                        <th class="p-4">ACTIONS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% products.forEach(product=> { %>
                                        <tr class="border-b border-gray-700 transition-all duration-200 <%= product.isHidden ? 'opacity-50' : '' %>"
                                            id="product-row-<%= product._id %>">
                                            <td class="p-4">
                                                <img src="<%= product.images?.[0] || '/images/placeholder.jpg' %>"
                                                    alt="<%= product.name %>" class="w-16 h-16 object-cover rounded-lg">
                                            </td>
                                            <td class="p-4 text-gray-200">
                                                <%= product.name %>
                                            </td>
                                            <td class="p-4 text-gray-200">
                                                <%= product.brand %>
                                            </td>
                                            <td class="p-4 text-gray-200">
                                                <%= product.categoryId?.name %>
                                            </td>
                                            <td class="p-4 text-gray-200">â‚¹<%= product.price || 'N/A' %>
                                            </td>
                                            <td class="p-4 text-gray-200">
                                                <%= product.variants?.[0]?.stock || 0 %>
                                            </td>
                                            <td class="p-4">
                                                <span
                                                    class="px-2 py-1 rounded-full text-sm <%= product.isActive ? 'bg-green-900/30 text-green-400' : 'bg-red-900/30 text-red-400' %>">
                                                    <%= product.isActive ? 'Active' : 'Inactive' %>
                                                </span>
                                            </td>
                                            <td class="p-4">
                                                <div class="flex gap-2">
                                                    <button onclick="editProduct('<%= product._id %>')"
                                                        class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded">
                                                        Edit
                                                    </button>
                                                    <button
                                                        onclick="toggleHideProduct(`<%= product._id %>`, <%= product.isHidden ? 'true' : 'false' %>)"
                                                        class="<%= product.isHidden ? 'bg-green-600 hover:bg-green-700' : 'bg-red-600 hover:bg-red-700' %> text-white px-3 py-1 rounded"
                                                        id="hide-button-<%= product._id %>">
                                                        <%= product.isHidden ? 'Unhide' : 'Hide' %>
                                                    </button>

                                                </div>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pagination -->
            <div class="flex justify-center my-8">
                <nav class="flex space-x-2" aria-label="Pagination">
                    <% if (hasPreviousPage) { %>
                        <a href="?page=<%= previousPage %>"
                            class="px-4 py-2 rounded-lg bg-gray-800 text-gray-400 hover:bg-gray-700">
                            Previous
                        </a>
                        <% } %>

                            <% for(let i=1; i <=totalPages; i++) { %>
                                <a href="?page=<%= i %>"
                                    class="px-4 py-2 rounded-lg <%= currentPage === i ? 'bg-orange-500 text-white' : 'bg-gray-800 text-gray-400 hover:bg-gray-700' %>">
                                    <%= i %>
                                </a>
                                <% } %>

                                    <% if (hasNextPage) { %>
                                        <a href="?page=<%= nextPage %>"
